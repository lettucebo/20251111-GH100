@model TodoApp.Models.TodoItem

@{
    ViewData["Title"] = "刪除待辦事項";
}

<div class="container mt-4">
    <h1>刪除待辦事項</h1>

    <h3>確定要刪除此項目嗎？</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">標題</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <dt class="col-sm-2">描述</dt>
                <dd class="col-sm-10">@Model.Description</dd>
            }

            <dt class="col-sm-2">狀態</dt>
            <dd class="col-sm-10">
                @if (Model.IsCompleted)
                {
                    <span class="badge bg-success">已完成</span>
                }
                else
                {
                    <span class="badge bg-warning">進行中</span>
                }
            </dd>

            <dt class="col-sm-2">建立時間</dt>
            <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

            @if (Model.CompletedAt.HasValue)
            {
                <dt class="col-sm-2">完成時間</dt>
                <dd class="col-sm-10">@Model.CompletedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
            }
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="刪除" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">返回清單</a>
        </form>
    </div>
</div>
