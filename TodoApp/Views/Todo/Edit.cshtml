@model TodoApp.Models.TodoItem

@{
    ViewData["Title"] = "編輯待辦事項";
}

<div class="container mt-4">
    <h1>編輯待辦事項</h1>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="CompletedAt" />
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label">標題</label>
                    <input asp-for="Title" class="form-control" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">描述</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="IsCompleted" />
                    <label class="form-check-label" asp-for="IsCompleted">已完成</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="儲存" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">返回清單</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
